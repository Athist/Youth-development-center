@model LPX2YCDProject2020.Models.SignUpModel
@{ Layout = null;}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Signup</title>
    <environment include="Development">
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/lib/jquery-validate/jquery.validate.js"></script>
        <script src="~/lib/jquery-ajax-unobtrusive/dist/jquery.unobtrusive-ajax.js"></script>

        <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
              integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
              crossorigin="anonymous"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only"
              asp-fallback-test-property="position"
              asp-fallback-test-value="absolute">
        <script src="~/lib/jquery/jquery.min.js"></script>
        <script src="~/lib/jquery-ajax-unobtrusive/dist/jquery.unobtrusive-ajax.min.js"></script>
        <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    </environment>

</head>
<body>
    
    <div class="container">


        <div class="row" style="padding:10px;">
            <div class="col-md-5 offset-4" style="border:1px solid blue;">

                <h4>Sign up</h4>
                <hr />

                <form asp-action="SignUp" asp-controller="Account">

                    <input type="text" asp-for="DateJoined" hidden />

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <div>
                            <label asp-for="FirstName" class="control-label"></label>
                        </div>
                        <div>
                            <input type="text" asp-for="FirstName" class="form-control" />
                        </div>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div>
                            <label asp-for="LastName" class="form-label"></label>
                        </div>
                        <div>
                            <input type="text" asp-for="LastName" class="form-control" />
                        </div>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div>
                            <label asp-for="IDNumber" class="form-label"></label>
                        </div>
                        <div>
                            <input type="number" asp-for="IDNumber" class="form-control" />
                        </div>
                        <span asp-validation-for="IDNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div>
                            <label asp-for="DateOfBirth" class="form-label"></label>
                        </div>
                        <div>
                            <input type="date" asp-for="DateOfBirth" class="form-control" />
                        </div>
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div>
                            <label asp-for="Email" class="form-label"></label>
                        </div>
                        <div>
                            <input type="email" asp-for="Email" class="form-control" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div>
                            <label asp-for="ContactNumber" class="form-label"></label>
                        </div>
                        <div>
                            <input type="number" asp-for="ContactNumber" class="form-control" />
                        </div>
                        <span asp-validation-for="ContactNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div>
                            <label asp-for="Password" class="form-label"></label>
                        </div>
                        <div>
                            <input type="password" asp-for="Password" class="form-control" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div>
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                        </div>
                        <div>
                            <input type="password" asp-for="ConfirmPassword" class="form-control" />
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <br />
                    <div>
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
                <p> Click <a asp-action="Login" asp-controller="Account">here</a> to login</p>
            </div>
        </div>

    </div>
    <partial name="_footer" />
    <environment include="Development">
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/lib/jquery-validate/jquery.validate.js"></script>
        <script src="~/lib/jquery-ajax-unobtrusive/dist/jquery.unobtrusive-ajax.js"></script>

        <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <script src="~/lib/jquery/jquery.min.js"></script>
        <script src="~/lib/jquery-ajax-unobtrusive/dist/jquery.unobtrusive-ajax.min.js"></script>
        <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    </environment>
</body>
</html>


